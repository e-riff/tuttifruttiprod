{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    <main class="login container-lg d-flex justify-content-center mt-2 justify-content-center">
        <section class="mt-4">
            <h1 class="text-center">Réinitialisation de mot de passe</h1>

            {{ form_start(resetForm) }}
            {{ form_row(resetForm.plainPassword) }}
            <button class="btn btn-primary">Réinitialiser le mot de passe</button>
            {{ form_end(resetForm) }}
        </section>
    </main>
{% endblock %}