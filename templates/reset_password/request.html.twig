{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block body %}
    <main class="login container-lg d-flex justify-content-center mt-2 justify-content-center">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <section class="mt-4">
            <h1 class="text-center">Réinitialisation de mot de passe</h1>

            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Entrez votre adresse email, et nous vous enverrons un
                    lien pour réinitialiser votre mot de passe.
                </small>
            </div>

            <button class="btn btn-primary mt-2">Envoyer l'email de réinitialisation de mot de passe</button>
            {{ form_end(requestForm) }}
        </section>

    </main>
{% endblock %}