{% extends 'base.html.twig' %}

{% block title %}Band index{% endblock %}

{% block body %}
<main class="container-md">

<h1>Band index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>IsActive</th>
                <th>FlashInformation</th>
                <th>Tagline</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for band in bands %}
            <tr>
                <td>{{ band.id }}</td>
                <td>{{ band.name }}</td>
                <td>{{ band.description }}</td>
                <td>{{ band.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ band.flashInformation }}</td>
                <td>{{ band.tagline }}</td>
                <td>{{ band.slug }}</td>
                <td>
                    <a href="{{ path('admin_band_show', {'id': band.id}) }}">show</a>
                    <a href="{{ path('admin_band_edit', {'id': band.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('admin_band_new') }}">Create new</a>
    </main>
{% endblock %}
