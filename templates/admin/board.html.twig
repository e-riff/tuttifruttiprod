{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Board Admin{% endblock %}

{% block body %}

    <main class="adminBoard">

        <section class="welcomeAdmin">
            <div class="d-flex flex-column m-4 justify-content-center align-items-center">
                <h1>Bienvenue, {{ app.user.firstname }}</h1>
                <h2>Qu'est-ce qu'on administre aujourdhui ?</h2>
            </div>
        </section>
        <section class="adminList container-lg">
            <article>
                <img src="{{ asset('build/images/band.jpg') }}"
                     alt="photo de groupe">
                <div class="categoryName">
                    <h2 class="h3">
                        <a href="{{ path('admin_band_index') }}">
                            <mark>Les Groupes</mark>
                        </a>
                    </h2>
                </div>
            </article>
            <article>
                <img src="{{ asset('build/images/styles.png') }}"
                     alt="photo de styles musicaux">
                <div class="categoryName">
                    <h2 class="h3">
                        <a href="{{ path('admin_musicStyle_index') }}">
                            <mark>Les Styles</mark>
                        </a>
                    </h2>
                </div>
            </article>
            <article>
                <img src="{{ asset('build/images/musicians.jpg') }}"
                     alt="photo de musiciens">
                <div class="categoryName">
                    <h2 class="h3">
                        <a href="{{ path('admin_musician_index') }}">
                            <mark>Les musiciens</mark>
                        </a>
                    </h2>
                </div>
            </article>
            <article>
                <img src="{{ asset('build/images/concert.jpg') }}"
                     alt="photo de concert">
                <div class="categoryName">
                    <h2 class="h3">
                        <a href="{{ path('admin_concert_index') }}">
                            <mark>Les concerts</mark>
                        </a>
                    </h2>
                </div>
            </article>
            <article>
                <img src="{{ asset('build/images/concert.jpg') }}"
                     alt="photo type d'evenement">
                <div class="categoryName">
                    <h2 class="h3">
                        <a href="{{ path('admin_event_index') }}">
                            <mark>Les types d'événement</mark>
                        </a>
                    </h2>
                </div>
            </article>
        </section>
    </main>

{% endblock %}